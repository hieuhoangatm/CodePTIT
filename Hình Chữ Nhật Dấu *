#include<stdio.h>
    int main(){
    int a,b;
    scanf("%d %d", &b, &a);
    if(a>0 && b>0){
    	for(int i=1;i<=a;i++){
    	    for(int j=1;j<=b;j++){
    		     if(i==1 || j==1 || i==a || j==b) printf("*");
    		     else printf(" ");
    	    }
        printf("\n");
        }
    }
    return 0;
}
